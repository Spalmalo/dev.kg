<div class="screencast_item">
  <div class="row">
    <div class="col-sm-4">
      <div class="thumbnail">
        <%= link_to image_tag(youtube_video_thumbnail(screencast.video_url), alt: screencast.title ), screencast %>
      </div>
    </div>
    <div class="col-sm-8">
      <%= link_to content_tag(:h2, screencast.title), screencast %>

      <div class="published_at"><%= t("screencast_list_item.added") %>: <time datetime="<%= screencast.created_at.to_s %>"><%= l screencast.created_at, format: :long %></time>; <%= t("screencast_list_item.author") %>: <%= render screencast.user %></div>

      <p><%= screencast.description %></p>

      <%= link_to [glyph(:film), t("screencast_list_item.watch")].join(' ').html_safe, screencast %>
    </div>
  </div>
</div>