<ul class="nav navbar-nav navbar-right">
  <% if speaker_signed_in? %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= gravatar current_speaker.email, 20, t('speaker.avatar') %> <%= current_speaker.first_name %> <span class="caret"></span></a>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to [glyph(:user), t("speaker.profile")].join(' ').html_safe, edit_speaker_registration_path %></li>
        <li class="divider"></li>
        <li><%= link_to [glyph(:'log-out'), t("speaker.sign_out")].join(' ').html_safe, destroy_speaker_session_path, method: :delete %></li>
      </ul>
    </li>
  <% else %>
    <li><%= link_to [glyph(:'log-in'), t("speaker.sign_in")].join(' ').html_safe, new_speaker_session_path %></li>
    <li><%= link_to [glyph(:user), t("speaker.sign_up")].join(' ').html_safe, new_speaker_registration_path %></li>
  <% end %>
</ul>