<% provide :title, @clip.title %>

<div id="clip">
  <h1><%= @clip.title %></h1>

  <div class="thumbnail">
    <div class="embed-responsive embed-responsive-16by9">
      <%= youtube_embed @clip.video_url %>
    </div>
  </div>

  <%= render partial: 'panel', locals: { video: @clip } %>

  <div class="well">
    <p class="description"><%= @clip.description %></p>
  </div>

  <%= video_tabs @clip %>
</div>