<%= semantic_form_for @clip do |f| %>

  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :video_url, input_html: { disabled: @clip.persisted? } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, as: :button, button_html: { class: "btn btn-primary" } %>
    <%= f.action :cancel, button_html: { class: "btn btn-default" } %>
  <% end %>
<% end %>